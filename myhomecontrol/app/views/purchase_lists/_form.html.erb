<%= form_with model: @purchase_list, local: true do |form| %>

<% if @purchase_list.errors.any? %>
   <div id="error_explanation">
     <h2>
       <%= pluralize(@purchase_list.errors.count, "error") %>
     </h2>
     <ul>
       <% @purchase_list.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :purchase_date %><br>
    <%= date_select "purchase_list", "purchase_date" %>
  </p>
  <p>
    <%= form.label :total_price %><br>
    <%= form.text_field :totalprice %>
  </p>
  <p>
    <%= form.label :company %><br>
    <%= form.text_field :company %>
  </p>
  <p>
    <%= form.submit %>
  </p>

<% end %>
